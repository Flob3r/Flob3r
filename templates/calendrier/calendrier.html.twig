<!DOCTYPE html>
<html>
    <head>
        <title>Calendrier</title>
        <meta charset="UTF-8">

        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('css/fullcalendar.min.css') }}" rel="stylesheet">
        <script src="{{ asset('js/fullcalendar.min.js') }}"></script>

        {% block stylesheets %}
        <style>
            #calendrier{
                width: 80%;
                margin: auto;
            }
        </style>
        {% endblock %}

    </head>

    <body>
        <a href="{{ path('app_accueil_accueil') }}">Retour Ã  l'accueil</a>
        {% block body %}
        <div id="calendrier">
            events: [
            {% for Calendrier in Calendriers %}
                Titre : "{{ Calendrier.nomCours }}"
                DateStart : {{ Calendrier.dateStart|date('Y-m-d H:i:s') }}
                DateEnd : {{ Calendrier.dateEnd|date('Y-m-d H:i:s') }}
            {% endfor %}
            ]
        </div>
        {% endblock %}

        {% block javascripts %}
        <script>
            window.onload = () => {
                let calendarElt = document.querySelector("#calendrier")

                let calendar = new FullCalendar.Calendar(calendarElt, {
                    initialView: "timeGridWeek",
                    locale: 'fr',
                    timeZone: 'Europe/Paris',
                    headerToolbar: {
                        start: 'prev,next today',
                        center: 'title',
                        end: 'dayGridMonth,timeGridWeek'
                    },
                    editable: true,
                    events: [
                        {% for Calendrier in Calendriers %}
                        {
                            id: '{{ Calendrier.id }}',
                            title: '{{ Calendrier.nomCours }}',
                            start: '{{ Calendrier.dateStart|date("Y-m-d H:i:s") }}',
                            end: '{{ Calendrier.dateEnd|date('Y-m-d H:i:s') }}',
                        },
                        {% endfor %}
                    ]
                })

                calendar.on('eventChange', (e) => {
                    console.log(e)
                    let url = `/calendrier/${e.event.id}/edit`

                    let data = {
                        "title": e.event.title,
                        "start": e.event.start,
                        "end": e.event.end
                    }

                    let xhr = new XMLHttpRequest

                    xhr.open("PUT", url);
                    xhr.send(JSON.stringify(data))
                })

                calendar.render()
            }
        </script>
        {% endblock %}

    </body>
</html>